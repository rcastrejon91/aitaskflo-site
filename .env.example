# Server Configuration
NODE_ENV=development
PORT=3001

# Security Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-256-bit-encryption-key-32-chars-long
SESSION_SECRET=your-session-secret-key-change-this

# Database Configuration (if using external database)
DATABASE_URL=your-database-connection-string
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
ADMIN_EMAIL=admin@yourdomain.com

# API Keys for Free Services
WEATHER_API_KEY=your-openweather-api-key
NEWS_API_KEY=your-news-api-key

# Security Configuration
SECURITY_LOCKDOWN_THRESHOLD=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=20

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,txt,docx
UPLOAD_DIR=./uploads
VIRUS_SCAN_ENABLED=false
CLAM_SOCKET_PATH=/var/run/clamav/clamd.ctl

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/csp-report
CSP_SCRIPT_SRC=self,unsafe-inline,cdnjs.cloudflare.com
CSP_STYLE_SRC=self,unsafe-inline,fonts.googleapis.com
CSP_IMG_SRC=self,data:,https:

# Monitoring and Logging
LOG_LEVEL=info
SECURITY_LOG_ENABLED=true
AUDIT_LOG_ENABLED=true
METRICS_ENDPOINT_ENABLED=false

# External Security Services
SECURITY_MONITORING_WEBHOOK=https://your-security-service.com/webhook
THREAT_INTELLIGENCE_API_KEY=your-threat-intel-api-key

# Privacy and Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Development and Testing
DEBUG_SECURITY=false
SECURITY_BYPASS_ENABLED=false
TEST_MODE=false